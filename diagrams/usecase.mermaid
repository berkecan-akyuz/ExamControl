usecaseDiagram
    actor "Exams Coordinator (Admin)" as Admin
    actor "Proctor" as Proctor
    actor "Student" as Student

    package "Exam Security System" {
        usecase "Login" as UC1
        usecase "Manage Exams" as UC2
        usecase "Manage Rooms" as UC3
        usecase "Import Roster" as UC4
        usecase "Assign Seats" as UC5
        
        usecase "Perform Check-in" as UC6
        usecase "Capture Photo" as UC6_1
        usecase "Verify Identity (ML)" as UC6_2
        usecase "Check Seat Compliance" as UC6_3
        
        usecase "Log Violation" as UC7
        usecase "View Reports" as UC8
        usecase "View Dashboard" as UC9
    }

    Admin --> UC1
    Admin --> UC2
    Admin --> UC3
    Admin --> UC4
    Admin --> UC5
    Admin --> UC8

    Proctor --> UC1
    Proctor --> UC6
    Proctor --> UC7
    Proctor --> UC9

    UC6 ..> UC6_1 : include
    UC6 ..> UC6_2 : include
    UC6 ..> UC6_3 : include

    note right of UC6_2
        Uses face-api.js
        for matching
    end note
